#!/usr/bin/env bash
# Indefinitely writes "I am alive" to the file /tmp/my_process.
#   Pauses two seconds in between each message.
echo "Process started at $(date)" >> /tmp/my_process.log

# Ensure process name appears correctly
exec > /dev/null 2>&1
exec bash -c 'while true; do echo "I am alive!" >> /tmp/my_process; sleep 2; done'
